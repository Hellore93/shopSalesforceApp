<apex:page controller="web2leadController" showHeader="false" showQuickActionVfHeader="false">
    <html>
    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8" />
    <style>
        body {
            background-image: url(https://img.freepik.com/darmowe-wektory/abstrakcjonistyczny-blekitny-geometryczny-ksztalta-tlo_1035-17545.jpg?w=2000)
        }

        input {
            border-radius: 5px;
            text-align: center;
            height: 25px;
            border: 0;
        }

        .submit {
            width: 100px;
            height: 40px;
            margin: 0 auto;
        }

        .city {
            width: 60%;
            margin: 0 auto;
        }

        label {
            font-size: 15px;
            margin-bottom: 0.5em;
        }

        .form {
            height: 100vh;
            display: flex;
        }


    <form class="{!form}" action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">

        <div style="   
        width: 50%;
        margin: auto;
        border-radius: 15px;
        background-color: #6060606e;">
            <div style="text-align: center; font-size: 35px; margin-top: 30px; text-decoration: underline;">CONTACT FORM</div>
            <div style="display: flex; flex-direction:row; justify-content: center; text-align: center; margin-top: 10px;">

                <input type="hidden" name="oid" value="00D7Q000006G1tX" />
                <input type="hidden" name="retURL" value="https://rafaelcourse-developer-edition.eu44.force.com/hospitalSite?success=true"
                />

                <!--  ----------------------------------------------------------------------  -->

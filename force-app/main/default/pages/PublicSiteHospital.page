                <!--  value="rafal.sztorc@britenet.com.pl">                                   -->
                <!--  ----------------------------------------------------------------------  -->

                <div class="leftColumn" style="width: 30%; display: flex; flex-direction: column; margin: 0 20px;">
                    <label for="first_name">First Name</label>
                    <input id="first_name" maxlength="40" name="first_name" size="20" type="text" />
                    <br/>

                    <label for="email">Email *</label>
                    <input id="email" maxlength="80" name="email" size="20" type="text" required="required" />
                    <br/>

                    <label for="country">Country</label>
                    <input id="country" maxlength="40" name="country" size="20" type="text" />
                    <br/>
                </div>

                <div class="rightColumn" style="width: 30%; display: flex; flex-direction: column; margin: 0 20px;">
                    <label for="last_name">Last Name *</label>
                    <input id="last_name" maxlength="80" name="last_name" size="20" type="text" required="required" />
                    <br/>

                    <label for="company">Company *</label>
                    <input id="company" maxlength="40" name="company" size="20" type="text" required="required" />
                    <br/>

                    <label for="state">State/Province</label>
                    <input id="state" maxlength="20" name="state" size="20" type="text" />
                    <br/>
                </div>
            </div>

            <div class="bottomSection" style="display: flex;
            flex-direction: column;
            text-align: center;
            width: 60%;
            margin: 0 auto;
            margin-bottom: 30px;">
                <label for="city">City</label>
                <input class="city" id="city" maxlength="40" name="city" size="20" type="text" />
                <br/>

                <input type="submit" class="submit" name="submit" />
            </div>

        </div>

    </form>

    <div class="{!information}">
        <div style="font-size: 35px; margin: auto;">
            Thank you, We contact with you soon.</div>
    </div>

    </html>


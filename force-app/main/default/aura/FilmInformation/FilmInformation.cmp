<aura:component implements="lightning:isUrlAddressable,force:appHostable" access="global" description="FilmInformation"
                controller="Aura_SearchFilms_Controller">
    <aura:attribute name="urlParam" type="String"/>
    <aura:attribute name="filmObject" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.getUrlParameter}"/>
    <!--    <aura:handler name="init" value="{!this}" action="{!c.onPageReferenceChange}"/>-->

    <lightning:card title="Film Information">
        <div class="filmCard">
            <img src="{! 'https://image.tmdb.org/t/p/w600_and_h900_bestv2' + v.filmObject.backdrop_path}" class="filmInformationImage"/>
            <div class="filmDescription">
                <p>{!v.filmObject.overview}</p>
                <p>Budget : {!v.filmObject.budget}</p>
                <p>From: {!v.filmObject.original_language} {!v.filmObject.original_title} </p>
                <p>Direct: {!v.filmObject.release_date}</p>
            </div>
        </div>
    </lightning:card>
</aura:component>